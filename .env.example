# Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=prefer

# Test Database
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecommerce_test

# LocalStack Configuration
LOCALSTACK_HOST=localhost
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# S3 Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
S3_RAW_BUCKET=ecommerce-raw
S3_PROCESSED_BUCKET=ecommerce-processed
S3_ANALYTICS_BUCKET=ecommerce-analytics

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka/Redpanda Configuration
KAFKA_BROKERS=localhost:9092
SCHEMA_REGISTRY_URL=http://localhost:8081

# API Configuration
API_BASE_URL=http://localhost:8000
JWT_SECRET=change-me-in-production

# Monitoring
METRICS_PORT=9090
OTEL_ENDPOINT=http://localhost:4317
TRACE_SAMPLE_RATE=0.1

# Feature Flags
FEATURE_SYNTHETIC_V2=true
FEATURE_SDV=false
FEATURE_MIMESIS=true
FEATURE_STREAMING=true
FEATURE_BATCH=true

# Data Generation
DATA_SEED=42

# Security (never commit real values)
AUTH_PROVIDER=local
ENCRYPTION_KEY=change-me-in-production

# Performance
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40